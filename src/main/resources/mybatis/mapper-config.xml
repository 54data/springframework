<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>	
		<!-- 컬럼 이름 언더바인 것을 dto 필드의 캐멀 스타일과 일치시키게 해줌 -->
		<setting name="mapUnderscoreToCamelCase" value="true"/>
	</settings>
	
	<typeAliases>
		<typeAlias type="com.mycompany.springframework.dto.Ch13Member" alias="Member"/>
		<typeAlias type="com.mycompany.springframework.dto.Ch13Board" alias="Board"/>
		<typeAlias type="com.mycompany.springframework.dto.Ch13Account" alias="Account"/>
		<typeAlias type="com.mycompany.springframework.dto.Ch13Pager" alias="Pager"/>
	</typeAliases>
</configuration>